<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_view">

    <TextView
        android:id="@+id/txtChooseStaffEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4d4d4e"
        android:drawableEnd="@drawable/ic_icon_dropdown"
        android:hint="Choose Staff"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintTop_toBottomOf="@id/txtChooseStaffEdit" />

    <TextView
        android:id="@+id/txtChooseMonthEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4d4d4e"
        android:drawableEnd="@drawable/ic_icon_dropdown"
        android:hint="Choose month"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseStaffEdit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintTop_toBottomOf="@id/txtChooseMonthEdit" />


    <TextView
        android:id="@+id/txtTextAttendanceEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Attendance"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseMonthEdit" />

    <TextView
        android:id="@+id/txtCheckInEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/checkin_box_green"
        android:gravity="center"
        android:padding="2dp"
        android:text="23 Checkin"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/txtTextAttendanceEdit"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseMonthEdit" />

    <TextView
        android:id="@+id/txtLeavesEdit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/leaves_box_red"
        android:gravity="center"
        android:padding="2dp"
        android:text="5 leaves"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/txtCheckInEdit"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseMonthEdit" />

    <TextView
        android:id="@+id/txtStatusEdit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#4d4d4e"
        android:drawableEnd="@drawable/ic_icon_dropdown"
        android:hint="Status"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLeavesEdit" />

    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatusEdit" />

    <TextView
        android:id="@+id/txtSalaryDateEdit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#4d4d4e"
        android:drawableEnd="@drawable/ic_icon_calendar"
        android:hint="Salary Date"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLeavesEdit" />

    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSalaryDateEdit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatusEdit" />

    <TextView
        android:id="@+id/txtTextFixedAmountEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="FixedAmount"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatusEdit" />

    <TextView
        android:id="@+id/txtTextPlusEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_icon_plus"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextFixedAmountEdit" />

    <TextView
        android:id="@+id/txtTextCommissionsEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="Commissions"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextPlusEdit" />

    <TextView
        android:id="@+id/txtTextDeductableEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:text="Deductable"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextMinusEdit" />

    <TextView
        android:id="@+id/txtTextMinusEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_icon_minus"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextCommissionsEdit" />

    <TextView
        android:id="@+id/txtTextEqualEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/ic_icon_equal"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextDeductableEdit" />

    <TextView
        android:id="@+id/txtTextFinalSalaryEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="Final Salary"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextEqualEdit" />

    <EditText
        android:id="@+id/etFixedAmountEdit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/black"
        android:hint="Enter"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatusEdit" />

    <EditText
        android:id="@+id/etCommissionsEdit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/black"
        android:hint="Enter"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFixedAmountEdit" />

    <EditText
        android:id="@+id/etDeductableEdit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/black"
        android:hint="Enter"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCommissionsEdit" />

    <TextView
        android:id="@+id/txtFinalSalaryEdit"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"
        android:text="8000"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeductableEdit" />

    <EditText
        android:id="@+id/etNoteEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:hint="Note"
        android:textColorHint="#4d4d4e"
        app:layout_constraintTop_toBottomOf="@id/txtFinalSalaryEdit" />


    <Button
        android:id="@+id/btnUpdateSalaryEdit"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttons"
        android:text="Update Salary"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNoteEdit" />

    <Button
        android:id="@+id/btnDeleteEdit"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_buttons"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_icon_delete_trash"
        android:text="Delete"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNoteEdit" />


</androidx.constraintlayout.widget.ConstraintLayout>