<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_view">

    <TextView
        android:id="@+id/txtAddTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Salary"
        android:textColor="@color/purple_main"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtChooseStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4d4d4e"
        android:drawableRight="@drawable/ic_icon_dropdown"
        android:hint="Choose Staff"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtAddTitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintTop_toBottomOf="@id/txtChooseStaff" />

    <TextView
        android:id="@+id/txtChooseMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#4d4d4e"
        android:drawableEnd="@drawable/ic_icon_dropdown"
        android:hint="Choose month"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseStaff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintTop_toBottomOf="@id/txtChooseMonth" />


    <TextView
        android:id="@+id/txtTextAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Attendance"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseMonth" />

    <TextView
        android:id="@+id/txtCheckIn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/checkin_box_green"
        android:gravity="center"
        android:padding="2dp"
        android:text="23 Checkin"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/txtTextAttendance"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseMonth" />

    <TextView
        android:id="@+id/txtLeaves"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/leaves_box_red"
        android:gravity="center"
        android:padding="2dp"
        android:text="5 leaves"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/txtCheckIn"
        app:layout_constraintTop_toBottomOf="@+id/txtChooseMonth" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#4d4d4e"
        android:drawableEnd="@drawable/ic_icon_dropdown"
        android:hint="Status"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLeaves" />

    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatus" />

    <TextView
        android:id="@+id/txtSalaryDate"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#4d4d4e"
        android:drawableEnd="@drawable/ic_icon_calendar"
        android:ellipsize="end"
        android:hint="Salary Date"
        android:maxLines="2"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLeaves" />

    <View
        android:layout_width="160dp"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#6C6C6C"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSalaryDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatus" />

    <TextView
        android:id="@+id/txtTextFixedAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="FixedAmount"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtStatus" />

    <TextView
        android:id="@+id/txtTextPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ic_icon_plus"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextFixedAmount" />

    <TextView
        android:id="@+id/txtTextCommissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="Commissions"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextPlus" />

    <TextView
        android:id="@+id/txtTextDeductable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:text="Deductable"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextMinus" />

    <TextView
        android:id="@+id/txtTextMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_icon_minus"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextCommissions" />

    <TextView
        android:id="@+id/txtTextEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_icon_equal"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextDeductable" />

    <TextView
        android:id="@+id/txtTextFinalSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:text="Final Salary"
        android:textColor="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTextEqual" />

    <EditText
        android:id="@+id/etFixedAmount"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/black"
        android:hint="Enter"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus" />

    <EditText
        android:id="@+id/etCommissions"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/black"
        android:hint="Enter"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFixedAmount" />

    <EditText
        android:id="@+id/etDeductable"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/black"
        android:hint="Enter"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#4d4d4e"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCommissions" />

    <TextView
        android:id="@+id/txtFinalSalary"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginRight="30dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDeductable" />

    <EditText
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:hint="Note"
        android:textColorHint="#4d4d4e"
        app:layout_constraintTop_toBottomOf="@id/txtFinalSalary" />


    <Button
        android:id="@+id/btnAddSalary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add Salary"
        android:textColor="@color/white"
        app:backgroundTint="@color/purple_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNote" />


</androidx.constraintlayout.widget.ConstraintLayout>