<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLisView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgStaffShimmer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="26dp"
            android:background="@color/shimmerGrey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtFixedPriceShimmer"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@color/shimmerGrey"
            android:textColor="#6D6E70"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/imgStaffShimmer"
            app:layout_constraintTop_toBottomOf="@+id/txtStaffNameShimmer" />

        <TextView
            android:id="@+id/txtCommissionsPriceShimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@color/shimmerGrey"
            android:text="Fixed: 6000"
            android:textColor="@color/shimmerGrey"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/imgStaffShimmer"
            app:layout_constraintTop_toBottomOf="@+id/txtStaffNameShimmer" />

        <TextView
            android:id="@+id/txtStaffNameShimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/shimmerGrey"
            android:text="Staff Name"
            android:background="@color/shimmerGrey"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/imgStaffShimmer"
            app:layout_constraintTop_toTopOf="@id/clLisView" />


        <TextView
            android:id="@+id/txtPriceShimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="26dp"
            android:text="Price"
            android:background="@color/shimmerGrey"
            android:textColor="@color/shimmerGrey"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/clLisView"
            app:layout_constraintTop_toTopOf="@id/clLisView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="26dp"
            android:background="@color/BorderGrey"
            app:layout_constraintBottom_toBottomOf="@+id/clLisView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>